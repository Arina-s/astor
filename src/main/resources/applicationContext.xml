<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:application.properties"/>
    <context:component-scan base-package="com.arinauniversity.astor"/>

    <bean id="figure" class="com.arinauniversity.astor.Figure" init-method="figureInit" destroy-method="figureDestroy">
        <constructor-arg value="Tree"/>
    </bean>

    <bean id="bookShelf" class="com.arinauniversity.astor.BookShelf" scope="prototype"
          init-method="bookShelfInit"
          factory-method="getBookShelf">
        <property name="bookList">
            <list>
                <ref bean="technicalBook"/>
                <ref bean="fantasyBook"/>
            </list>
        </property>
        <property name="owner" value="${owner}"/>
        <property name="space" value="${space}"/>
    </bean>

</beans>